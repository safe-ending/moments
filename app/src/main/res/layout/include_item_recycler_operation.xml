<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawableLeft="@mipmap/ic_praise_yes"
        android:layout_marginLeft="1dp"
        android:drawablePadding="8dp"
        android:minWidth="85dp"
        android:text="100"
        android:textColor="@color/color_69"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/txt_praise"
        android:drawableLeft="@mipmap/ic_comment_yes"
        android:drawablePadding="8dp"
        android:minWidth="85dp"
        android:text="11"
        android:textColor="@color/color_69"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/txt_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:drawablePadding="8dp"
        android:layout_toRightOf="@+id/txt_comment"
        android:drawableLeft="@mipmap/ic_dynamic_delete"
        android:textColor="#4972B8"
        android:minWidth="100dp"
        android:text="删除" />

    <ImageView
        android:id="@+id/img_click_praise_or_comment"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:minWidth="100dp"
        android:visibility="gone" />
</RelativeLayout>